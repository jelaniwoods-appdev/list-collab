<% was_validated = item.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(item, html: form_html_options) do |f| %>
  <div class="form-group">
    <% list_class = "form-control" %>
    <% list_was_invalid = item.errors.include?(:list) %>

    <% if was_validated %>
      <% if list_was_invalid %>
        <% list_class << " is-invalid" %>
      <% else %>
        <% list_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :list %>

    <%= f.text_field :list, class: list_class, placeholder: "Enter list" %>
    <% if list_was_invalid %>
      <% item.errors.full_messages_for(:list).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = item.errors.include?(:name) %>

    <% if was_validated %>
