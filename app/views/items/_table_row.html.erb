<tr>
  <td>
    <%= item.list %>
  </td>

  <td>
    <%= item.name %>
  </td>

  <td>
    <%= item.url %>
  </td>

  <td>
    <%= item.image %>
  </td>

  <td>
    <%= item.description %>
  </td>

  <td>
    <%= item.position %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to item, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_item_url(item), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to item, method: :delete, data: { confirm: "Do you really want to delete this item?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
