<div data-id="<%= item.id %>" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
  <div class="media">
    <%= link_to item.url, target: "_blank" do %>
      <%= image_tag(item.image, class: "mr-3", alt: item.description, width: 75) %>
    <% end %>
    <div class="media-body">
      <div class="d-flex align-items-center">
      <span class="badge badge-secondary"><%= item.position %></span>
      <h5 class="ml-3 mt-0"><%= item.name %></h5>
      </div>
      <p><%= item.description %></p>
    </div>
  </div>

  <%= link_to "##{dom_id(item)}", class: "stretched-link text-secondary", style: "font-size: 1.3em;", "data-toggle": "collapse", role: "button", "aria-expanded": false, "aria-controls": dom_id(item) do %>
    <i class="fas fa-caret-down"></i>
  <% end %>
  
  <div class="collapse d-none" id="<%= dom_id(item) %>">
    <div class="card card-body">
      <%# TODO make view helper %>
      <%= item.youtube_embed.html_safe %>
    </div>
  </div>
</div>
