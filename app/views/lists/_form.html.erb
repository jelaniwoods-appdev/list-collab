<% was_validated = list.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(list, html: form_html_options) do |f| %>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = list.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>

    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% list.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = list.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user %>

    <%= f.text_field :user, class: user_class, placeholder: "Enter user" %>
    <% if user_was_invalid %>
      <% list.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% slug_class = "form-control" %>
    <% slug_was_invalid = list.errors.include?(:slug) %>

    <% if was_validated %>
      <% if slug_was_invalid %>
        <% slug_class << " is-invalid" %>
      <% else %>
        <% slug_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :slug %>

    <%= f.text_field :slug, class: slug_class, placeholder: "Enter slug" %>
    <% if slug_was_invalid %>
      <% list.errors.full_messages_for(:slug).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
