<tr>
  <td>
    <%= list.name %>
  </td>

  <td>
    <%= list.user.username %>
  </td>

  <td>
    <%= list.slug %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to list, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_list_url(list), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to list, method: :delete, data: { confirm: "Do you really want to delete this list?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
